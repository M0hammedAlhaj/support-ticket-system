# ==============================================
# EXAMPLE ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and modify values as needed

# Environment Type (local, docker, production)
ENVIRONMENT=docker

# ==============================================
# SERVICE PORTS CONFIGURATION
# ==============================================
GATEWAY_SERVICE_PORT=8080
AUTH_SERVICE_PORT=8081
USER_SERVICE_PORT=8082
TICKET_SERVICE_PORT=8083

# ==============================================
# GRPC CONFIGURATION
# ==============================================
# gRPC Server Ports
GRPC_SERVER_PORT=9090

# gRPC Client Addresses (Docker Environment)
AUTH_SERVICE_GRPC_HOST=auth-service
AUTH_SERVICE_GRPC_PORT=9090

USER_SERVICE_GRPC_HOST=user-service
USER_SERVICE_GRPC_PORT=9090

TICKET_SERVICE_GRPC_HOST=ticket-service
TICKET_SERVICE_GRPC_PORT=9090

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# MongoDB
MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_INITDB_ROOT_USERNAME=user
MONGO_INITDB_ROOT_PASSWORD=user123
MONGO_INITDB_DATABASE=userdb

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ticketdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# Database Names
USER_DB_NAME=userdb
TICKET_DB_NAME=ticketdb
AUTH_DB_NAME=authdb

# ==============================================
# RABBITMQ CONFIGURATION
# ==============================================
SPRING_RABBITMQ_HOST=rabbitmq
SPRING_RABBITMQ_PORT=5672
SPRING_RABBITMQ_USERNAME=admin
SPRING_RABBITMQ_PASSWORD=admin123

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_TICKEY=DEBUG

# ==============================================
# DEBUG CONFIGURATION
# ==============================================
DEBUG_MODE=false
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics